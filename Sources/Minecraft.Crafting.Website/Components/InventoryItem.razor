<div>
<div class="item" alt="@Item?.DisplayName"
     ondragover="event.preventDefault();"
     draggable="true"
     @ondragstart="@OnDragStart"
     @ondrop="@(e => OnDrop(e))"
     @ondragenter="@(e => OnDragEnter(e))"
    @ondragend="@OnDragEnd"
    @onclick="@OnClick">

    @if (Item != null)
    {
            @if (!string.IsNullOrWhiteSpace(Item.ImageBase64))
            {
            <img src="data:image/png;base64, @(Item.ImageBase64)" class="img-thumbnail, center" title="@Item.DisplayName" alt="@Item.DisplayName" style="min-width: 50px; max-width: 150px; min-height: 50px" />
            }
            else
            {
            <img src="images/default.png" class="img-thumbnail" title="@Item.DisplayName" alt="@Item.DisplayName" style="max-width: 150px" />
            }
    }
</div>
<div class="overlay">
        <p class="white shadow">@IItem?.NumberItem</p>
</div>
</div>