<CascadingValue Value="@this">
    <div class="container">
        <div class="row">
            <div class="col-6">

                <div>My inventory:</div>
                <div>
                    <div class="css-grid">

                        @foreach (var item in Items)
                        {
                            <CraftingItem Item="item" NoDrop="true" />
                        }
                    </div>
                </div>

            </div>
        </div>
    </div>
</CascadingValue>
